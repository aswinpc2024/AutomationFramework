<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Test Suite" parallel="tests" thread-count="12" data-provider-thread-count="2">
    <listeners>
        <listener class-name="com.listeners.ListenerClass"/>
    </listeners>
    <test thread-count="1" name="Regression Tests execution over Chrome Browser" parallel="methods">
        <parameter name="browser" value="CHROME"></parameter>
        <classes>
            <class name="com.tests.SignUpPageTest"></class>
        </classes>
    </test>
    <test thread-count="1" name="Regression Tests execution over Firefox Browser" parallel="methods">
        <parameter name="browser" value="FIREFOX"></parameter>
        <classes>
            <class name="com.tests.SignUpPageTest"></class>
        </classes>
    </test>
    <test thread-count="1" name="Regression Tests execution over Edge Browser" parallel="methods">
        <parameter name="browser" value="EDGE"></parameter>
        <classes>
            <class name="com.tests.SignUpPageTest"></class>
        </classes>
    </test>

</suite> <!-- Suite -->